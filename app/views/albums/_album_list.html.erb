<%== pagy_nav(@pagy_a) %>
<div class="row">
 	<% @albums.each{|album| %>
 	<% owner = @users.find { |u| u['id'] == album['userId'] } %>
		<div class="col p-card">
			<div class="card" style="width: 18rem;">
         	<%= link_to album_info_path(album['id']) do %>
    		<%= image_tag 'https://www.thesprucepets.com/thmb/meRd41is751DsQQjofaiKV_ZUBg=/941x0/filters:no_upscale():max_bytes(150000):strip_icc():format(webp)/cat-talk-eyes-553942-hero-df606397b6ff47b19f3ab98589c3e2ce.jpg', :class => "card-img-top"%>
			<% end %>
  				<div class="card-body">
  				Title: <%= link_to album['title'],album_info_path(album['id']),:class => "read_m" %>
  				<br>
  				Author: <%= link_to owner['name'],user_info_path(owner['id']),:class => "read_m" %>
  				</div>
			</div>
		</div>
 		<% } %>
</div>
